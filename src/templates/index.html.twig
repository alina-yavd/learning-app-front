{% extends 'base.html.twig' %}

{% block body %}
    <main class="site-main">
        <div class="container">

            <section class="tests">
                <div class="tests-nav">
                    <div class="nav-block nav-left">
                        <div class="current-language"><span>Язык:&nbsp;</span><span id="language">Все</span></div>
                        <div class="current-source">Группа слов: <span id="group">Все слова</span>&nbsp;</div>
                    </div>
                    <div class="nav-block nav-right">
                        <div class="results-clear"><span class="btn btn-inline">Очистить прогресс</span></div>
                        <div class="results-count">Ответов: <span>0</span></div>
                    </div>
                </div>
                <div class="test-inner">
                    <div class="question" id="question"></div>
                    <div class="answers">
                        <div id="answers"></div>
                        <div class="right-answer" id="correctAnswer"></div>
                    </div>
                    <div class="question-buttons"></div>
                </div>
            </section>

        </div>
    </main>
{% endblock %}
